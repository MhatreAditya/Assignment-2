@model CRUDinMVC.Models.Category
@{
    ViewBag.Title = "Category";
}

<h2>Update category</h2>

@using (Html.BeginForm("CreateUpdatecategory", "Default", FormMethod.Post, new { id = "myform" }))
{
    @*@Html.AntiForgeryToken()*@

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    <div id="dvcatId">
            <label>Category Id</label>
            @Html.TextBoxFor(m => m.Id, new { @readonly = "readonly" })
    </div>
    <div>
        <label>Category Name</label>
        @Html.TextBoxFor(m => m.Name)
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery.min1.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {

        var catId = $("#Id").val();

        if (catId == '' || catId == null || catId == undefined) {
            $("#dvcatId").hide();
        }
        else {
            $("#dvcatId").show();
        }

    });
</script>